{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ],
    "baseUrl": "./src/",
    "types": [
      "@types/handlebars",
      "@types/core-js",
      "@types/webpack-env"
    ]
  },
  "include": [
    "./src/types.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/preset.js",
    "./build-tools/config/storybook/config.js"
  ]
}
